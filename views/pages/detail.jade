extends ../layout

block content
	.container
		.row
			.col-md-7
				embed(src="#{movie.flash}",allowFullScreen="true",wmode="transparent",quality="high",width="720",height="600",align="middle",type="appliction/x-shockwave-flash",pluginspage="http://www.macromedia.com/go/getflashplayer",title="#{movie.title}")
				//- object(width="720",height="600",data-player-playerbody="flash" type="application/x-shockwave-flash" data="#{movie.flash}")
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd= movie.title
					dt 导演
					dd= movie.doctor
					dt 国家
					dd= movie.country
					dt 语言
					dd= movie.language
					dt 上映年份
					dd= movie.year
					dt 简介
					dd= movie.summary