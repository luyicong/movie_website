extends ../layout

block content
	.container
		.row
			each item in movies
				.col-md-2.col-sm-4.col-xs-6
					.thumbnall
						a(href="/movie/#{item._id}")
							img.img-thumbnail(src="#{item.poster}",alt="#{item.title}")
					.caption
						h3 #{item.title}
						p: a.btn.btn-primary.btn-sm(href="/movie/#{item._id}",role="button") 观看预告片