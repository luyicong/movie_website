extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						//-th ID
						th(style="text-align:center;") 用户名
						th(style="text-align:center;") 创建时间
						th(style="text-align:center;") 更新
						th(style="text-align:center;") 删除
				tbody
					each item in users
						tr(class="item-id-#{item._id}")
							//- td #{item._id}
							td(style="text-align:center;") #{item.name}
							td(style="text-align:center;") #{moment(item.meta.createdAt).format('YYYY/MM/DD')}
							td(style="text-align:center;"): a(target="_blank",href="../admin/update/#{item._id}") 修改
							td(style="text-align:center;")
								button.btn.btn-danger.btn-xs.del(type="button",data-id="#{item._id}") 删除
//-	script(src="/js/admin.js")